{
	"name": "first-ext",
	"displayName": "first-ext",
	"description": "desc",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:extension.addJsFileHeader",
        "onLanguage:javascript"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
            "type": "object",
            "title": "JS File Header",
            "properties": {
                "jsFileHeader.Author": {
                    "type": "string",
                    "default": "ITMO",
                    "description": "Author name and email"
                },
                "jsFileHeader.Copyright": {
                    "type": "string",
                    "default": "",
                    "description": "Copyright information"
                },
                "jsFileHeader.License": {
                    "type": "string",
                    "default": "",
                    "description": "License information"
                }
            }
        },
		"commands": [
			{
				"command": "first-ext.autoSave",
				"title": "Autosaving on window change"
			},
			{
                "command": "extension.addJsFileHeader",
                "title": "JavaScript: Add File Header"
            }
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
